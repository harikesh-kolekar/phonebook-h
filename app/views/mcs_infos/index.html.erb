<style type="text/css">
  .glyphicon {
    font-size: 20px;
  }

  .glyphicon1 {
    font-size: 20px;
  }
</style>
<div class="col-md-offset-5 col-md-5">
    <h1 >MSC Info</h1>
</div>
<br/>
<%= link_to "Create Mcs Info",new_mcs_info_path,  :class=>"btn btn-info", :remote => true %>

<div class="container">
  <table class="table table-striped">
  <thead>
    <tr>
\      <th scope="col">Info Type</th>
      <th scope="col">File</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @mcs_infos.each do |mcs_info| %>
      <tr>
        <td><%= mcs_info.info_type %></td>
        <td><%= link_to  mcs_info.attachment_file_name, mcs_info.attachment.url %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, mcs_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end%>
  </tbody>
</table>
</div>


