<div class = "container">
  <div class="wrapper">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html=>{:class => "form-signin",  method: :put}) do |f| %>
      <h2 class="form-signin-heading">Change your password</h2>

      <hr class="colorgraph"><br>
      <%= render "/shared/error_message" %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", placeholder: "Enter  New Password"   %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", placeholder: "Confirm New Password"   %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block"  %>
      </div>
      <!-- <div style="margin:15px; color:red">Email are invaid</div> -->

    <% end %>
  </div>
</div>


