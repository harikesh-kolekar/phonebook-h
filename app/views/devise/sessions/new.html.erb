<div class = "container">
  <div class="wrapper">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html=>{:class => "form-signin"}) do |f| %>
      <h2 class="form-signin-heading">Log in</h2>

      <hr class="colorgraph"><br>
      <%= render "/shared/error_message" %>
      <div class="field">
        <%= f.email_field :email, autofocus: true , :class => "form-control", placeholder: "Enter Email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", placeholder: "Enter Password"   %>
      </div>
      <div class="actions">
        <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block"  %>
      </div>
      <!-- <div style="margin:15px; color:red">Email are invaid</div> -->

    <% end %>
  </div>
</div>
