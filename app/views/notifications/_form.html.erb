
<div class="modal fade" id="editnotification" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <center><h4 class="modal-title">Create Notification</h4></center>
        </div>
         <div id = "error"></div>
        <div class="modal-body">
          <%= form_for(@notification, html: { multipart: true, :onsubmit => " return ValidateFileUpload() " }, :class => "form-horizontal") do |f| %>
             
    
            <div class="row">
              <div class="form-group">
                    <%= f.label :title, "Title:", :class => "control-label col-sm-3"%>
                  <div class="col-sm-9">
                    <%= f.text_field :title, :class => "form-control", :required => true  %><br/>
                  </div>
              </div>
              <div class="form-group">
                      <%= f.label :description, "Description:", :class => "control-label col-sm-3" %>
                   <div class="col-sm-9">
                      <%= f.text_area :description, :class => "form-control", :required => true  %><br/>
                    </div>
              </div>
              <div class="form-group">
                      <%= f.label :attachment, "Attach File:", :class => "control-label col-sm-3" %>
                    <div class="col-sm-8">
                      <%= f.file_field :attachment, :class => "form-control"  %><br/>
                    </div>
              </div>
               <div class="form-group">
                      <%= f.label :attachment, "Groups:", :class => "control-label col-sm-3" %>
                    <div class="col-sm-8">
                      
                      <%= f.select :designation_ids, options_from_collection_for_select(Designation.all,"id","name",@notification.designation_ids),{}, {:class => "form-control", :multiple=>"multiple"} %><br/>
                      

                    </div>


              </div>

              

              <div class="actions col-sm-3">
                <%= f.submit "Create Notification", :class => "btn btn-info", :style => "margin-left: 150px;" %>
              </div>
            </div>
          <% end %>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

