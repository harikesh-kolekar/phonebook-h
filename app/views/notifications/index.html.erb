<div class="col-md-offset-5 col-md-5">
    <h1 >Notifications</h1>
</div>
<br/>
<%= link_to "Add Notification",new_notification_path,  :class=>"btn btn-info", :remote => true %>

<div class="container">
     
    <table cellpadding="0" cellspacing="0" border="0" class="display table" width="100%" id="notifications" data-source="<%= notifications_url(format: "json") %>">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Type</th>
                <th>Groups</th>
                <th>Attachment</th>
                <th>Action</th>
                     
            </tr>
        </thead>
    <tbody>
      
    </tbody>
  </table>

     
</div>
<script type="text/javascript">
  $('#notifications').DataTable({
        
        bProcessing: true,
          bServerSide: true,
          sAjaxSource: $('#products').data('source')
        });
   
</script>
  


