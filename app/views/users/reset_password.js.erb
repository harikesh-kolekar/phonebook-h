<% if @success %>
	$('.alert').remove();
	$("#header").after ('<div class="alert alert-success alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button> Password Updated Successfully </div>')
	$('#change_pass').modal('hide');
<% else %>
	$("#error")[0].innerHTML = '<div class="alert alert-warning alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button><%= @message %>	</div>'
<% end %>