
<div class="modal fade" id="show_profile" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <center><h4 class="modal-title"><%= @user.name%></h4></center>
        </div>
         
        <div class="modal-body">
          <%= form_for @user, :class => "form-horizontal", :url=>"dd" do |f| %>

  <div class="form-group col-md-6">
  
         <%= f.label :photo, "Photo:",:class => "col-sm-3 control-label", :required=>true  %>
     <div class="col-sm-8">
     <% if @user.photo.exists? %>
        <%= image_tag @user.photo.url(:thumb) %><br/>
      <% end %>
      
     </div>
  </div>
  
  <div class="form-group col-md-6">
            <%= f.label :icard, "I-card:",:class => "col-sm-3 control-label"  %>
    <div class="col-sm-8">
         <% if @user.icard.exists? %>
        <%= image_tag @user.icard.url(:thumb),:class=>"pull-left" %><br/>
      <% end %>
         
    </div>
  </div>

  <div class="form-group col-md-6">
        <%= f.label :name,"Name:", :class => "col-sm-3 control-label" %>
      <div class="col-sm-8">
         <%=  @user.name  %>
      </div>
   </div>
  
  <div class="form-group col-md-6"> 
         <%= f.label :email, "Email:",:class => "col-sm-3 control-label"  %>
     <div class="col-sm-8">
         <%= @user.email %>
      </div>
  </div>
 
  <div class="form-group col-md-6">
      <%= f.label :mobile_no1, "Mobile No 1:",:class => "col-sm-3 control-label"  %>
    <div class="col-sm-8">
      <%= @user.mobile_no1  %>
    </div>
  </div>

  <div class="form-group col-md-6">

       <%= f.label :mobile_no2, "Mobile No 2:",:class => "col-sm-3 control-label"  %>
    <div class="col-sm-8">
       <%= @user.mobile_no2%>
    </div>
  </div>
   
  <div class="form-group col-md-6">
    <%= f.label :date_of_birth, "DOB:",:class => "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :date_of_birth,:class => "form-control", :name => "birthdate", :placeholder => "Enter DOB" %>
      </div>
  </div>
  
  <div class="form-group col-md-6">
      <%= f.label :phone_no, "Phone No:",:class => "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :phone_no,:class => "form-control", :placeholder => "Enter Phone Number"  %>
    </div>
  </div>

 
  <div class="form-group col-md-6">
        <%= f.label :education, "Education:",:class => "col-sm-3 control-label"  %>
    <div class="col-sm-8">
        <%= f.text_field :education,:class => "form-control", :placeholder => "Enter Education"  %>
    </div>
  </div>
  
  <div class="form-group col-md-6">
        <%= f.label :designation, "Designation:",:class => "col-sm-3 control-label"  %>
    <div class="col-sm-8">
        <%= f.text_field :designation,:class => "form-control", :placeholder => "Enter Designation"  %>
    </div>
  </div>

  <div class="form-group col-md-6">
       <%= f.label :home_district, "Home District:",:class => "col-sm-3 control-label"  %>
     <div class="col-sm-8 dropdown">
       <%= f.select :home_district, options_from_collection_for_select(District.all,"id","name") %>
     </div>
  </div>
  
  <div class="form-group col-md-6">
        <%= f.label :home_taluka, "Home Taluka:",:class => "col-sm-3 control-label"  %>
     <div class="col-sm-8">
        <%= f.select :home_taluka, options_from_collection_for_select([],"id","name"), {:include_blank => "select Taluka"}, {:class => "select2 span5"}  %>
     </div>
  </div>

  <div class="form-group col-md-6">
         <%= f.label :posting_district, "Posting District:",:class => "col-sm-3 control-label"  %>
      <div class="col-sm-8">
         <%= f.select :posting_district, options_from_collection_for_select(District.all,"id","name") %>
      </div>
   </div>

  <div class="form-group col-md-6">
  
       <%= f.label :posting_taluka, "Posting Taluka:",:class => "col-sm-3 control-label"  %>
   <div class="col-sm-8">
       <%= f.select :posting_taluka, options_from_collection_for_select([],"id","name"), {:include_blank => "select Taluka"}, {:class => "select2 span5"} %>
    </div>
  </div>
  
  <div class="form-group col-md-6">
        <%= f.label :present_post, "Present Post:",:class => "col-sm-3 control-label"  %>
    <div class="col-sm-8">  
        <%= f.text_field :present_post,:class => "form-control", :placeholder => "Enter Present Post"  %>
    </div>
  </div>
 
 <div class="form-group col-md-6">
       <%= f.label :posting_date, "Posting Date:",:class => "col-sm-3 control-label"  %>
    <div class="col-sm-8">
       <%= f.text_field :posting_date,:class => "form-control", :name => "birthdate", :placeholder => "Enter Posting date" %>
    </div>
  </div>

  <div class="form-group col-md-6">
        <%= f.label :date_of_join_dept, "Joining date:",:class => "col-sm-3 control-label"  %>
    <div class="col-sm-8">
       <%= f.text_field :date_of_join_dept,:class => "form-control", :name => "birthdate", :placeholder => "Enter Date of join Dept."  %>
    </div>
  </div>
 
  <div class="form-group col-md-6">
       <%= f.label :batch, "Batch:",:class => "col-sm-3 control-label"  %>
    <div class="col-sm-8">
        <%= f.text_field :batch,:class => "form-control", :placeholder => "Enter Batch"  %>
    </div>  
  </div>

  <div class="form-group col-md-6">
        <%= f.label :other_info, "Other Info:",:class => "col-sm-3 control-label"  %>
    <div class="col-sm-8">
        <%= f.text_field :other_info,:class => "form-control", :placeholder => "Enter Other Info"  %>
    </div>
  </div>

  
  
<% end %>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

